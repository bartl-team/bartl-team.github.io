# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# JSON
[*.json]
indent_style = space
indent_size = 2

# YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Java
[*.java]
indent_style = space
indent_size = 4

# Python
[*.py]
indent_style = space
indent_size = 4

# Go
[*.go]
indent_style = tab
indent_size = 4

[nftables.conf]
indent_style = space
indent_size = 8
